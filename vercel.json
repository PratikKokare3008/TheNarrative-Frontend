{
  "version": 2,
  "name": "thenarrative-frontend",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "headers": {
        "cache-control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/service-worker.js",
      "headers": {
        "cache-control": "public, max-age=0, must-revalidate"
      }
    },
    {
      "src": "/manifest.json",
      "headers": {
        "cache-control": "public, max-age=86400"
      }
    },
    {
      "src": "/favicon.ico",
      "headers": {
        "cache-control": "public, max-age=86400"
      }
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Permissions-Policy",
          "value": "camera=(), microphone=(), geolocation=()"
        }
      ]
    },
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, PUT, DELETE, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, Authorization"
        }
      ]
    }
  ],
  "env": {
    "REACT_APP_API_URL": "https://thenarrative-backend.onrender.com",
    "REACT_APP_PYTHON_API_URL": "https://thenarrative-python.onrender.com",
    "REACT_APP_BIAS_API_URL": "https://narrative-ml-cloudrun-53060812465.asia-south2.run.app"
  },
  "build": {
    "env": {
      "REACT_APP_API_URL": "https://thenarrative-backend.onrender.com",
      "REACT_APP_PYTHON_API_URL": "https://thenarrative-python.onrender.com",
      "REACT_APP_BIAS_API_URL": "https://narrative-ml-cloudrun-53060812465.asia-south2.run.app",
      "GENERATE_SOURCEMAP": "false"
    }
  },
  "functions": {
    "app/api/**/*.js": {
      "runtime": "nodejs18.x"
    }
  },
  "rewrites": [
    {
      "source": "/news",
      "destination": "/"
    },
    {
      "source": "/sports", 
      "destination": "/"
    },
    {
      "source": "/markets",
      "destination": "/"
    },
    {
      "source": "/weather",
      "destination": "/"
    }
  ]
}
